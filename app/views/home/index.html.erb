<header>
  <div class="container" id="maincontent" tabindex="-1">
    <div class="row">
      <div class="col-lg-12">
        <%= image_tag 'profile.png', class: "img-responsive" %>
        <div class="intro-text">
            <h1 class="name">Jin Li's Web Portfolio</h1>
            <hr class="star-light">
            <span class="skills">Web Developer</span>
        </div>
      </div>
    </div>
  </div>
</header>
<section id="portfolio">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>Portfolio</h2>
                <hr class="star-primary">
            </div>
        </div>
        <div class="row">
        	<% @projects.zip(['cabin.png', 'cake.png', 'circus.png', 'game.png', 'safe.png' ]).each do |project, image_path| %>
	            <div class="col-sm-4 portfolio-item">
	                <a href="<%= project_path(project) %>" class="portfolio-link" data-toggle="modal">
	                    <div class="caption">
	                        <div class="caption-content">
	                            <i class=""><%= project.name %></i>
	                        </div>
	                    </div>
	                    <%= image_tag image_path, class: "img-responsive" %>
	                </a>
	            </div>
	        <% end %>
        </div>
    </div>
</section>
<section class="success" id="about">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h2>About</h2>
                <hr class="star-light">
            </div>
        </div>
        <div class="row">
            <div class="col-lg-4 col-lg-offset-2">
                <p>I am currently a student at University of Urbana-Champaign</p>
            </div>
            <div class="col-lg-4">
                <p>This is where I showcase my work.</p>
            </div>
        </div>
    </div>
</section>